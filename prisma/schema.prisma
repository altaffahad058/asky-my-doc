generator client {
  provider = "prisma-client-js"
}

datasource db {
provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int      @id @default(autoincrement())
  email            String   @unique
  passwordHash     String
  firstName        String
  lastName         String
  occupation       String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  documents        Document[]

  // Password reset
  resetToken       String?  @unique
  resetTokenExpiry DateTime?
}

model Document {
  id        Int      @id @default(autoincrement())
  title     String
  fileName  String
  fileType  String
  content   String   @db.Text   // ðŸ”‘ store large text safely
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id])
  userId Int

  chunks Chunk[]
}

model Chunk {
  id         Int      @id @default(autoincrement())
  text       String
  // embeddings now stored in Pinecone, referenced by chunk.id
  document   Document @relation(fields: [documentId], references: [id])
  documentId Int
  createdAt  DateTime @default(now())
}


